/* =========================== game ====================  */
.game {
  margin-top: 20vh;
  position: absolute;
  padding-top: 5vw; 
  padding-left: 1vw;
   background-color:#602634;
  border-radius: 6px;
  width: 93vw;
  height: 93vw;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-touch-callout: none;/* 禁用系统默认菜单 */
  -ms-touch-callout: none;
  -webkit-user-select: none;/* css控制文字不能被选中 */
  -moz-user-select: none;
  -ms-user-select: none;/* 当触控事件发生在元素上时，不进行任何操作 */
  -ms-touch-action: none;
  touch-action: none;
}
.cell {
  width: 19vw;
  height: 19vw; 
  margin-left: 3vw;
  margin-bottom: 3vw;
  float: left;
  border-radius: 5px;
  box-sizing: border-box;
  background-color: #955563;
  overflow: hidden;
}
.cell-con { 
  width: 19vw;
  height: 19vw; 
  line-height: 19vw;
  position: absolute;
  font-size: 35rpx;
